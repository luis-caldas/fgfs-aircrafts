<?xml version="1.0"?>

<PropertyList>

 <path>PC-7.ac</path>
 <offsets>
  <pitch-deg>-1.5</pitch-deg>
  <z-m>-0.45</z-m>
 </offsets>

 <model>
  <name>Propeller</name>
  <path>Aircraft/PC-9M/Models/prop_3blade.xml</path>
  <offsets>
   <x-m> -3.7</x-m>
   <z-m> 0.692</z-m>
  </offsets>
 </model>

 <model>
  <name>frontstrut</name>
  <path>Aircraft/PC-9M/Models/strut_front.xml</path>
  <offsets>
   <x-m>-2.192</x-m>
   <y-m> 0.0  </y-m>
   <z-m> 0.325</z-m>
  </offsets>
 </model>
 <model>
  <name>leftstrut</name>
  <path>Aircraft/PC-9M/Models/strut_left.xml</path>
  <offsets>
   <x-m> 0.195</x-m>
   <y-m>-1.001</y-m>
   <z-m> 0.215</z-m>
  </offsets>
 </model>
 <model>
  <name>rightstrut</name>
  <path>Aircraft/PC-9M/Models/strut_right.xml</path>
  <offsets>
   <x-m> 0.195</x-m>
   <y-m> 1.001</y-m>
   <z-m> 0.215</z-m>
  </offsets>
 </model>

 <model>
  <usage>interior</usage>
  <path>Aircraft/PC-9M/Models/Cockpit/Cockpit-PC7.xml</path>
  <offsets>
   <z-m> 0.07</z-m>
  </offsets>
 </model>

 <effect>
  <name>Effects/pc7-reflection</name>
  <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
  <object-name>arch</object-name>
  <object-name>fuselage</object-name>
  <object-name>wings</object-name>
  <parameters>
   <texture n="2">
    <image>Aircraft/PC-9M/Models/Effects/pc7-normalmap.png</image>
   </texture>
  </parameters>
 </effect>

 <effect>
  <name>Effects/pc9-reflection</name>
  <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
  <object-name>cockpit</object-name>
  <object-name>strut</object-name>
 </effect>

 <!-- glass effects -->
 <effect>
  <inherits-from>Aircraft/PC-9M/Models/Effects/glass/glass</inherits-from>
  <object-name>canopy_inner</object-name>
  <object-name>inner_shell</object-name>
 </effect>

 <effect>
  <inherits-from>Aircraft/PC-9M/Models/Effects/glass/reflection</inherits-from>
  <object-name>canopy_outer</object-name>
  <object-name>outer_shell</object-name>
 </effect>

 <animation>
  <type>alpha-test</type>
  <object-name>windshield</object-name>
  <alpha-factor>0.01</alpha-factor>
 </animation>

 <animation>
  <type>noshadow</type>
  <object-name>canopy</object-name>
  <object-name>windshield</object-name>
<!--
  <object-name>hub1</object-name>
  <object-name>hub2</object-name>
-->
 </animation>

 <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
  <condition>
   <greater-than>
    <property>sim/multiplay/generic/float[6]</property>
    <value>9</value>
   </greater-than>
   <property>/sim/rendering/rembrandt/enabled</property>
  </condition>
  <object-name>windshield</object-name>
  <object-name>canopy</object-name>
 </effect>

 <!-- Canopy -->
 <animation>
  <type>translate</type>
  <object-name>canopy</object-name>
  <property>surface-positions/spoilers-pos-norm</property>
  <factor>1.65</factor>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>slider</type>
  <object-name>archi</object-name>
  <drag-direction>vertical</drag-direction>
  <value>0.0</value>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>/controls/flight/spoilers</property>
    <factor>-0.05</factor>
    <min>0.0</min>
    <max>1.0</max>
   </binding>
  </action>
 </animation>

 <!-- Aileron Right -->
 <animation>
  <type>rotate</type>
  <object-name>raileron</object-name>
  <property>surface-positions/left-aileron-pos-norm</property>
  <factor>-20</factor>
  <axis>
   <x1-m> 0.49</x1-m>
   <y1-m> 2.74</y1-m>
   <z1-m> 0.34</z1-m>
   <x2-m> 0.37</x2-m>
   <y2-m> 4.86</y2-m>
   <z2-m> 0.63</z2-m>
  </axis>
 </animation>

