<?xml version="1.0"?>
 
<!-- by Petar Jedvaj -->
 
<PropertyList>
 
 <path>Gear.ac</path>
 
 <animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>controls/gear/gear-down</property>
  <factor>60</factor>
  <offset-deg>-30</offset-deg>
  <center>
   <x-m>-0.04</x-m>
   <y-m> 0.00</y-m>
   <z-m> 0.02</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>slider</type>
  <object-name>grip</object-name>
  <drag-direction>vertical</drag-direction>
  <value>1</value>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>controls/gear/gear-down</property>
    <factor>-1</factor>
   </binding>
  </action>
  <hovered>
   <binding>
    <command>set-tooltip</command>
    <label>Parking Brake: %s</label>
    <measure-text>Gear: Down</measure-text>
    <tooltip-id>geare</tooltip-id>
    <property>controls/gear/gear-down</property>
    <mapping>nasal</mapping>
    <script>
     var modes = ['Up', 'Down'];
     return modes[arg[0]];
    </script>
   </binding>
  </hovered>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>nwarn</object-name>
  <condition>
  <equals>
   <property>gear/gear[0]/position-norm</property>
    <value>1.0</value>
   </equals>
  </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>nsafe</object-name>
  <condition>
   <greater-than>
    <property>gear/gear[0]/position-norm</property>
    <value>0</value>
   </greater-than>
   <less-than>
    <property>gear/gear[0]/position-norm</property>
    <value>1</value>
   </less-than>
  </condition>
 </animation>
 
 <animation>
 <type>select</type>
 <object-name>lwarn</object-name>
 <condition>
 <equals>
 <property>gear/gear[1]/position-norm</property>
 <value>1.0</value>
 </equals>
 </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>lsafe</object-name>
  <condition>
   <greater-than>
    <property>gear/gear[1]/position-norm</property>
    <value>0</value>
   </greater-than>
   <less-than>
    <property>gear/gear[1]/position-norm</property>
    <value>1</value>
   </less-than>
  </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>rwarn</object-name>
  <condition>
   <equals>
    <property>gear/gear[2]/position-norm</property>
    <value>1.0</value>
   </equals>
  </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>rsafe</object-name>
  <condition>
   <greater-than>
    <property>gear/gear[2]/position-norm</property>
    <value>0</value>
   </greater-than>
   <less-than>
    <property>gear/gear[2]/position-norm</property>
    <value>1</value>
   </less-than>
  </condition>
 </animation>
 
 <animation> 
  <type>material</type>
  <object-name>nwarn</object-name>
  <object-name>rwarn</object-name>
  <object-name>lwarn</object-name>
  <emission> 
   <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
   <red>0</red>
   <green>1</green>
   <blue>0</blue>
  </emission>
 </animation>
 
 <animation> 
  <type>material</type>
  <object-name>nsafe</object-name>
  <object-name>rsafe</object-name>
  <object-name>lsafe</object-name>
  <emission> 
   <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
   <red>1</red>
   <green>0</green>
   <blue>0</blue>
  </emission>
 </animation>
 
</PropertyList>
