<?xml version="1.0"?>

<PropertyList>

  <path>brake.ac</path>
  <offsets>
    <roll-deg>0</roll-deg>
    <z-m>0.0</z-m>
  </offsets>

  <animation>
  <type>translate</type>
  <object-name>handle</object-name>
  <property>controls/gear/brake-parking</property>
  <factor>0.02</factor>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>controls/gear/brake-parking</property>
  <factor>45</factor>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>slider</type>
  <object-name>handle</object-name>
  <drag-direction>vertical</drag-direction>
  <value>1</value>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>controls/gear/brake-parking</property>
    <factor>-1</factor>
   </binding>
  </action>
  <hovered>
   <binding>
    <command>set-tooltip</command>
    <label>Parking Brake: %s</label>
    <measure-text>Parking Brake: Off</measure-text>
    <tooltip-id>parkbrake</tooltip-id>
    <property>controls/gear/brake-parking</property>
    <mapping>nasal</mapping>
    <script>
     var modes = ['Off', 'On'];
     return modes[arg[0]];
    </script>
   </binding>
  </hovered>
 </animation>

</PropertyList>
