<?xml version="1.0"?>

<PropertyList>

<!--
  <path>Cockpit.ac</path>
-->

  <effect>
    <inherits-from>Aircraft/PC-9M/Models/Effects/reflection</inherits-from>
    <object-name>metal</object-name>
  </effect>
  
  <!-- Submodels -->

  <!-- Instruments -->
  <animation>
    <type>select</type>
    <object-name>Analog</object-name>
    <condition>
      <property>/sim/model/pc9m/pc-7mk2</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Glass</object-name>
    <object-name>Mirrors</object-name>
    <condition>
      <property>/sim/model/pc9m/pc-7mkx</property>
    </condition>
  </animation>


  <!-- Student -->
  <model>
    <name>Mirrors</name>
    <path>Aircraft/PC-9M/Models/Cockpit/mirrors.xml</path>
    <offsets>
      <x-m>-0.945</x-m>
      <y-m>0.0</y-m>
      <z-m>1.205</z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/PC-9M/Models/Cockpit/Controls.xml</path>
    <offsets>
      <x-m>-1.01</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.05</z-m>
    </offsets>
  </model>
  <model>
    <name>Analog</name>
    <path>Aircraft/PC-9M/Models/Cockpit/Analog1.xml</path>
    <offsets>
      <x-m>-0.99</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.01</z-m>
    </offsets>
  </model>
  <model>
    <name>Glass</name>
    <path>Aircraft/PC-9M/Models/Cockpit/Glass1.xml</path>
    <offsets>
      <x-m>-0.99</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.01</z-m>
    </offsets>
  </model>

  <!-- Instructor -->
  <model>
    <path>Aircraft/PC-9M/Models/Cockpit/Controls.xml</path>
    <offsets>
      <x-m> 0.35</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.17</z-m>
    </offsets>
  </model>
  <model>
    <name>Analog</name>
    <path>Aircraft/PC-9M/Models/Cockpit/Analog1.xml</path>
    <offsets>
      <x-m> 0.37</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.125</z-m>
    </offsets>
  </model>
  <model>
    <name>Glass</name>
    <path>Aircraft/PC-9M/Models/Cockpit/Glass1.xml</path>
    <offsets>
      <x-m> 0.37</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.125</z-m>
    </offsets>
  </model>


  <!-- Pilots -->
  <!-- Student -->
  <model>
    <name>Seat</name>
    <path>Aircraft/PC-9M/Models/Cockpit/MKII/mkii.ac</path>
    <offsets>
      <x-m>0.07</x-m>
      <y-m>0.00</y-m>
      <z-m>0.47</z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/PC-9M/Models/Pilot/Pilot.xml</path>
    <offsets>
      <x-m>-0.20</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.82</z-m>
      <pitch-deg>0.0</pitch-deg>
    </offsets>
    <condition>
      <not>
        <property>/sim/current-view/internal</property>
      </not>
    </condition>
  </model>

  <!-- Instructor -->
  <model>
    <name>Seat</name>
    <path>Aircraft/PC-9M/Models/Cockpit/MKII/mkii.ac</path>
    <offsets>
      <x-m>1.50</x-m>
      <y-m>0.00</y-m>
      <z-m>0.58</z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/PC-9M/Models/Pilot/Instructor.xml</path>
    <offsets>
      <x-m> 1.23</x-m>
      <y-m> 0.00 </y-m>
      <z-m> 0.98</z-m>
      <pitch-deg>0.0</pitch-deg>
    </offsets>
    <condition>
      <not>
        <property>/sim/current-view/internal</property>
      </not>
    </condition>
  </model>

</PropertyList>
