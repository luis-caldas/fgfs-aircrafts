<?xml version="1.0"?>

<PropertyList>

  <path>mirrors.ac</path>

  <animation>
   <type>noshadow</type>
   <object-name>mirrors</object-name>
  </animation>
 
  <effect>
   <name>Aircraft/Generic/mirror</name>
   <inherits-from>Effects/model-combined-deferred</inherits-from>
   <object-name>reflective_left</object-name>
   <object-name>reflective_right</object-name>
   <parameters>
    <rain-enabled type="int"> 0 </rain-enabled>
    <normalmap-enabled type="int"> 0 </normalmap-enabled>
    <normalmap-dds type="int"> 0 </normalmap-dds>
    <normalmap-tiling type="float"> 1.0 </normalmap-tiling>
    <lightmap-enabled type="int"> 0 </lightmap-enabled>
    <reflection-enabled type="int"> 1 </reflection-enabled>
    <reflection-correction> 0.0 </reflection-correction>
    <reflection-type type="int"> 1 </reflection-type>
    <reflection-dynamic type="int"> 1 </reflection-dynamic>
    <reflection-fresnel type="float"> .0 </reflection-fresnel>
    <reflection-rainbow type="float"> 0.0 </reflection-rainbow>
    <reflection-noise type="float"> 0.0 </reflection-noise>
    <texture n= "5" >
     <type>cubemap</type>
     <images>
      <positive-x>Aircraft/Generic/Effects/CubeMaps/buildings/N.png</positive-x>
      <negative-x>Aircraft/Generic/Effects/CubeMaps/buildings/S.png</negative-x>
      <positive-y>Aircraft/Generic/Effects/CubeMaps/buildings/W.png</positive-y>
      <negative-y>Aircraft/Generic/Effects/CubeMaps/buildings/E.png</negative-y>
      <positive-z>Aircraft/Generic/Effects/CubeMaps/buildings/U.png</positive-z>
      <negative-z>Aircraft/Generic/Effects/CubeMaps/buildings/D.png</negative-z>
     </images>
    </texture>
    <ambient-correction type="float"> 0.1 </ambient-correction>
   </parameters>
 </effect>

 <effect>
  <name>Aircraft/Generic/reflection</name>
  <inherits-from>Effects/model-combined</inherits-from>
  <object-name>glass_left</object-name>
  <object-name>glass_right</object-name>
  <parameters>
    <normalmap-enabled type="int">0</normalmap-enabled>
    <lightmap-enabled type="int">0</lightmap-enabled>
    <reflection-enabled type="int">1</reflection-enabled>
    <reflection-correction type="float">0.9</reflection-correction>
    <reflect-map-enabled type="int">1</reflect-map-enabled>
    <reflection-fresnel type="float">0.01</reflection-fresnel>
    <reflection-rainbow type="float">0.0</reflection-rainbow>
    <reflection-noise type="float">0.0</reflection-noise>
    <reflection-dynamic type="int">1</reflection-dynamic>
    <texture n= "5" >
     <type>cubemap</type>
     <images>
      <positive-x>Aircraft/Generic/Effects/CubeMaps/real.fair-sky/fair-sky_px.png</positive-x>
      <negative-x>Aircraft/Generic/Effects/CubeMaps/real.fair-sky/fair-sky_nx.png</negative-x>
      <positive-y>Aircraft/Generic/Effects/CubeMaps/real.fair-sky/fair-sky_py.png</positive-y>
      <negative-y>Aircraft/Generic/Effects/CubeMaps/real.fair-sky/fair-sky_ny.png</negative-y>
      <positive-z>Aircraft/Generic/Effects/CubeMaps/real.fair-sky/fair-sky_pz.png</positive-z>
      <negative-z>Aircraft/Generic/Effects/CubeMaps/real.fair-sky/fair-sky_nz.png</negative-z>
     </images>
    </texture>
    <ambient-correction type="float">0.2</ambient-correction>
    <rendering-hint>transparent</rendering-hint>
    <transparent>true</transparent>
    <render-bin>
      <bin-number>10</bin-number>
      <bin-name>DepthSortedBin</bin-name>
    </render-bin>
  </parameters>
 </effect>

 <animation>
  <type>slider</type>
  <object-name>mirror_left</object-name>
  <drag-direction>vertical</drag-direction>
  <value>0.0</value>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>controls/mirrors/position-left</property>
    <factor>0.1</factor>
    <min>0</min>
    <max>1</max>
   </binding>
  </action>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>mirror_left</object-name>
  <property>controls/mirrors/position-left</property>
  <factor>-30.00</factor>
  <axis>
   <x1-m>  0.0   </x1-m>
   <y1-m>  0.149 </y1-m>
   <z1-m>  0.07  </z1-m>
   <x2-m>  0.0   </x2-m>
   <y2-m>  0.241 </y2-m>
   <z2-m> -0.046  </z2-m>
  </axis>
 </animation>

 <animation>
  <type>slider</type>
  <object-name>mirror_right</object-name>
  <drag-direction>vertical</drag-direction>
  <value>0.0</value>   
  <action>
   <binding>
    <command>property-adjust</command>
    <property>controls/mirrors/position-right</property>
    <factor>0.1</factor>
    <min>0</min>
    <max>1</max>
   </binding>
  </action>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>mirror_right</object-name>
  <property>controls/mirrors/position-right</property>
  <factor>30.00</factor>
  <axis>
   <x1-m>  0.0   </x1-m>
   <y1-m> -0.149 </y1-m>
   <z1-m>  0.07  </z1-m>
   <x2-m>  0.0   </x2-m>
   <y2-m> -0.241 </y2-m>
   <z2-m> -0.046  </z2-m>
  </axis>
 </animation>


</PropertyList>
