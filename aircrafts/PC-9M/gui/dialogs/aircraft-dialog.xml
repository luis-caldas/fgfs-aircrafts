<?xml version="1.0"?>

<PropertyList>

  <name>aircraft-dialog</name>
  <modal>false</modal>
  <layout>vbox</layout>
  <padding>20</padding>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>
    <text>
      <label>Aircraft Options</label>
    </text>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>

    <layout>hbox</layout>

    <text>
      <row>1</row>
      <col>0</col>
      <halign>left</halign>
      <label>Model Type</label>
    </text>
    <combo>
      <row>0</row>
      <col>1</col>
      <name>model-type</name>
      <pref-width>200</pref-width>
      <property>/sim/model/pc9m/dialogs/model-type</property>
      <value>PC-7</value>
      <value>PC-7 Mk II</value>
      <value>PC-7 MKX</value>
      <value>PC-9/A</value>
      <value>PC-9M</value>
      <value>T-6</value>
      <value>PC-21</value>
      <binding>
        <command>dialog-apply</command>
        <object-name>model-type</object-name>
      </binding>
      <binding>
        <command>nasal</command>
        <script>PC9M.newModel()</script>
      </binding>
    </combo>

    <hrule/>

    <button>
      <legend>  OK  </legend>
      <default>true</default>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

</PropertyList>
