<PropertyList include="PC9-shared.xml">

  <sim>
    <primary-set type="bool">true</primary-set>

    <!--Info -->

    <description>Pilatus PC-9M</description>
    <long-description>
     The Pilatus PC-9M is a single-engine, low-wing tandem-seat turboprop training aircraft manufactured by Pilatus Aircraft of Switzerland. Designed as a more powerful evolution of the Pilatus PC-7.
    </long-description>
    <rating>
      <FDM type="int">5</FDM>
      <systems type="int">4</systems>
      <cockpit type="int">4</cockpit>
      <model type="int">5</model>
    </rating>
    <tags>
      <tag>ga</tag>
      <tag>pilatus</tag>
      <tag>low-wing</tag>
      <tag>tricycle</tag>
      <tag>retractable-gear</tag>
      <tag>single-engine</tag>
      <tag>turboprop</tag>
      <tag>variable-pitch</tag>
      <tag>trainer</tag>
      <tag>ifr</tag>
      <tag>1980s</tag>
      <tag>1990s</tag>
      <tag>2000s</tag>
      <tag>2010s</tag>
    </tags>

    <model>
      <!--
       The model is dynamically loaded by setting /model/pc9m/pc-9m to true
       -->
      <pc9m>
       <pc-9m type="bool">true</pc-9m>
      </pc9m>
    </model>

    <menubar>
      <default>
        <menu n="100">
          <label>PC-9M</label>
        </menu>
      </default>
    </menubar>

    <help>
      <title>Pilatus PC-9M</title>
    </help>
  </sim>

  <controls>
    <engines>
      <active-engine type="int">0</active-engine>
    </engines>
  </controls>

  <engines>
    <active-engine>
      <run type="bool">false</run>
      <start type="bool">false</start>
      <abort type="bool">false</abort>
    </active-engine>
  </engines>

</PropertyList>
