<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <name>headtracker-config</name>
  <layout>vbox</layout>

  <!-- titlebar -->
  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    <text>
      <label>Headtracker configuration</label>
    </text>
    <empty>
      <stretch>1</stretch>
    </empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
      <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <checkbox>
    <label>Enable headtracking</label>
    <halign>left</halign>
    <property>/sim/headtracker/config/enable</property>
    <binding><command>dialog-apply</command></binding>
    <live>true</live>
  </checkbox>

  <checkbox>
    <label>Enable translation axes</label>
    <halign>left</halign>
    <enable><property>/sim/headtracker/config/enable</property></enable>
    <property>/sim/headtracker/config/enable-translation</property>
    <binding><command>dialog-apply</command></binding>
    <live>true</live>
  </checkbox>

  <checkbox>
    <label>Enable roll axis</label>
    <halign>left</halign>
    <enable><property>/sim/headtracker/config/enable</property></enable>
    <property>/sim/headtracker/config/enable-roll</property>
    <binding><command>dialog-apply</command></binding>
    <live>true</live>
  </checkbox>

  <checkbox>
    <label>Headtracking for external views</label>
    <halign>left</halign>
    <enable><property>/sim/headtracker/config/enable</property></enable>
    <property>/sim/headtracker/config/enable-external</property>
    <binding><command>dialog-apply</command></binding>
    <live>true</live>
  </checkbox>

  <hrule/>

  <button>
    <x>40</x>
    <y>10</y>
    <legend>Close</legend>
    <binding>
      <command>dialog-close</command>
    </binding>
  </button>
</PropertyList>
