<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <meta>
    <file-type type="string">FlightGear add-on menu bar items</file-type>
    <format-version type="int">1</format-version>
  </meta>

  <menubar-items>
    <menu n="266">
      <name>headtracker</name>
      <label>Headtracker</label>
      <enabled>false</enabled>

      <item>
        <name>headtracker-toggle</name>
        <label>Toggle Headtracker</label>
        <binding>
          <command>property-toggle</command>
          <property>/sim/headtracker/config/enable</property>
        </binding>
      </item>

      <item>
        <name>headtracker-config</name>
        <label>Headtracker Options</label>
        <binding>
          <command>dialog-show</command>
          <dialog-name>headtracker-config</dialog-name>
        </binding>
      </item>
    </menu>
  </menubar-items>
</PropertyList>
