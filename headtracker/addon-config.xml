<!-- 
  use this config.xml to create/set/publish your property tree
  or override default settings from defaults.xml

  Node: this file MUST be named config.xml and it MUST be in the
  root path of your addon/plugin.
  The topmost element MUST be <PropertyList>
-->

<PropertyList>
	<input>
		<keyboard>
			<key n="61">
				<name>= (equal sign)</name>
				<desc>Reset Head Tracker</desc>
				<binding>
					<command>nasal</command>
<script><![CDATA[headtracker.reset();]]></script>
					</binding>
			</key>
		</keyboard>
	</input>

	<sim>
		<headtracker>
			<x-m type="double">0</x-m>
			<y-m type="double">0</y-m>
			<z-m type="double">0</z-m>
			<heading-deg type="double">0</heading-deg>
			<pitch-deg type="double">0</pitch-deg>
			<roll-deg type="double">0</roll-deg>
			<status type="int">0</status>
			<control type="int">0</control>

			<config>
				<enable type="bool">true</enable>
				<enable-translation type="bool">true</enable-translation>
				<enable-roll type="bool">true</enable-roll>
				<enable-external type="bool">false</enable-external>
			</config>
		</headtracker>
	</sim>
</PropertyList>
